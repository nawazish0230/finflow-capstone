# Production Environment Variables Template
# Copy this file to .env.production and fill in the actual values
# DO NOT commit .env.production to version control

# Server Configuration
PORT=3001
NODE_ENV=production

# PostgreSQL Configuration
# If using Docker Compose, use service name as host
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-postgres-password-here
POSTGRES_DATABASE=finflow_auth
POSTGRES_SSL=false

# JWT Configuration
# IMPORTANT: Use a strong, random secret in production
# Generate with: openssl rand -base64 32
JWT_SECRET=your-strong-jwt-secret-here-change-this-in-production
JWT_EXPIRES_IN=12h

# CORS Configuration
# Specify allowed origins (comma-separated) or * for all
# Example: CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com
CORS_ORIGIN=*

# SSL Configuration (if using managed PostgreSQL)
# POSTGRES_SSL=true
# POSTGRES_REJECT_UNAUTHORIZED=false
