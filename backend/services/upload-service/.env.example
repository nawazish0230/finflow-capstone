# App
PORT=3000
NODE_ENV=development

# MongoDB
MONGODB_URI=mongodb://localhost:27017/finflow_upload

# JWT
JWT_SECRET=change-me-in-production
JWT_EXPIRES_IN=7d

# Storage: local | s3
STORAGE_PROVIDER=s3

# Local storage (when STORAGE_PROVIDER=local)
STORAGE_LOCAL_PATH=./uploads

# AWS S3 (when STORAGE_PROVIDER=s3)
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name
AWS_S3_KEY_PREFIX=finflow/documents
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# Upload
UPLOAD_MAX_FILE_SIZE=10485760
PRESIGNED_URL_EXPIRY=900

# Analytics service (for sync and chatbot)
ANALYTICS_SERVICE_URL=http://localhost:3002
# Optional: set if analytics-service has INTERNAL_API_KEY
# INTERNAL_API_KEY=your-internal-secret
